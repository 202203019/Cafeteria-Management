                        //- <input id="password2" name="password2" type="password" placeholder="Confirm Your Password" required>                                          
                        <button type="submit">Sign Up</button>
                    </form>

                    <form action="/user_su" method="post" class="hidden" id="form-user">
                        <input id="name" name="name" type="text" placeholder="Enter Your Name" required>
                        <input id="username" name="username" type="text" placeholder="Enter Your unique UserName" required>
                        <input id="email" name="email" type="text" placeholder="Enter Your Email" required>
                        <input id="contact" name="contact" type="text" placeholder="Enter Your Contact Number" required>
                        <input id="password"name="password" type="password" placeholder="New Password" required>
                        //- <input id="password2"name="password2" type="password" placeholder="Confirm Your Password" required>
                        <button type="submit">Sign Up</button>
                    </form>

                    <form action="/staff_su" method="post" class="hidden" id="form-staff">                        
