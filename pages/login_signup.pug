                        <input id="contact" name="contact" type="text" placeholder="Enter Your Contact Number" required>
                        <input id="passwor"name="password" type="password" placeholder="New Password" required>                                                    
                        //- <input id="password2"name="password2" type="password" placeholder="Confirm Your Password" required>
                        <select name="canteenno" class="sakalaka">                                  
                            each n in canteen
                                <option value=`#{n.canteennumber}`>#{n.canteenname}</option>
                        </select>
                        <button type="submit">Sign Up</button>                      
                    </form>

                    <form action="/supplier_su" method="post" class="hidden" id="form-supplier">
                        <input id="username" name="username" type="text" placeholder="Enter Your Name" required>
                        <input id="email" name="email" type="text" placeholder="Enter Your Email" required>                                          
                        <input id="password" name="password" type="password" placeholder=" New Password" required>
                        <input id="contact" name="contact" type="text" placeholder="Enter Your Contact Number" required>
                        <input id="address" name="address" type="text" placeholder="Enter Your Address" required>
                        //- <input id="password2" name="password2" type="password" placeholder="Confirm Your Password" required>                                          
                        <button type="submit">Sign Up</button>
                    </form>

                    <form action="/canteen_su" method="post" class="hidden" id="form-canteen">  
